<%- include("../partials/header") %>
<link rel="stylesheet" href="/css/style.css">

<h1>Edit Symptom</h1>
<form action="/symptoms/<%= symptom._id %>?_method=PUT" method="POST">
  <label for="name">Symptom Name:</label>
  <input type="text" name="name" id="name" value="<%= symptom.name %>" required><br>

  <label for="riskValue">Risk Value:</label>
  <input type="number" name="riskValue" id="riskValue" value="<%= symptom.riskValue %>" required><br>

  <button type="submit">Update Symptom</button>
</form>

<a href="/symptoms">Back to Symptom List</a>

