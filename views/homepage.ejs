<%- include("./partials/header") %>

<link rel="stylesheet" href="/css/style.css">

<!-- Stats cards -->
<div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
  <div class="col">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Total Patients</h5>
          <p class="display-5 text-success"><%= stats.totalPatients ?? 0 %></p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Available Rooms</h5>
          <p class="display-5 text-primary"><%= stats.availableRooms ?? 0 %></p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Isolation Rooms Available</h5>
        <p class="display-5 text-info"><%= stats.isolationRoomsAvailable ?? 0 %></p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card text-center h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Patients in Isolation</h5>
        <p class="display-5 text-info"><%= stats.isolationRoomsAvailable ?? 0 %></p>
      </div>
    </div>
  </div>
</div>

<!-- Quick Search -->
<section class="mb-5 quick-search">
  <h2 class="mb-3">Find Patient</h2>
  <form method="GET" action="/search" class="quick-search-form">
    <input class="form-control me-2" type="search" name="q" placeholder="Search patients or rooms" required>
    <select name="type" class="form-select me-2">
      <option value="patient">Patients</option>
      <option value="room">Rooms</option>
    </select>
    <button class="btn btn-outline-success" type="submit">Search</button>
  </form>
</section>

<!-- Quick Links -->
<section>
  <div class="row g-3">
    <div class="col-md-4">
      <a href="/patients/new" class="btn btn-lg btn-success w-100">
        + Add New Patient
      </a>
    </div>
    <div class="col-md-4">
      <a href="/patients" class="btn btn-lg btn-primary w-100">
        View All Patients
      </a>
    </div>
    <div class="col-md-4">
      <a href="/rooms" class="btn btn-lg btn-info w-100">
        View All Rooms
      </a>
    </div>
            <div class="col-md-4">
      <a href="/symptoms" class="btn btn-lg btn-info w-100">
        View Symptoms
      </a>
    </div>
  </div>
</section>

<%- include("./partials/footer") %>